<a id="top"></a>

<div class="container">

    <div class="page-header">
        <h1>{{selected.length}}/{{results.length}} Sequences Selected</h1>
    </div>

    <div class="row" dir-paginate="result in results | itemsPerPage: 10" >
        <div class="col-md-1 col-md-offset-1">
            <div style="padding-top: 100%; padding-right: 50%; text-align: right">
                <input type="checkbox" ng-click="toggleSelection(result._id)" ng-checked="arrayObjectIndexOf(selected, result._id, 'id') > -1" />
            </div>
        </div>
        <div class="col-md-8">
            <div class="well">
                <div class="media">
                    <div class="media-left">
                        <a><img ng-src="{{thumbSrc(result)}}" class="img-rounded media-object" /></a>
                    </div>
                    <div class="media-body">
                        <h4 class="media-title_label"><strong>{{result.title}}</strong> </h4>
                        <div class="row" ng-show="arrayObjectIndexOf(selected, result._id, 'id') > -1" style="padding-bottom: 2%">

                            <div class="col-md-5">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div style="padding-top: 15%;">
                                            <label>Category:</label>
                                        </div>
                                    </div>

                                    <div class="col-md-8" style="padding-left: 0%;">
                                        <div style="padding-top: 3%;">
                                            <select class="form-control input-sm" ng-model="selected[arrayObjectIndexOf(selected, result._id, 'id')].category">
                                                <option disabled selected value></option>
                                                <option value="Road">Road</option>
                                                <!--<option value="lane">Lane</option>-->
                                                <option value="Pedestrian">Pedestrian</option>
                                                <option value="Vehicle">Vehicle</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-3">
                                <div class="row">
                                    <div class="col-md-3" style="padding-left: 0%;">
                                        <div style="padding-top: 40%;">
                                            <label>FPS:</label>
                                        </div>
                                    </div>

                                    <div class="col-md-9" style="padding-left: 0%;">
                                        <div style="padding-top: 5%;">
                                            <select class="form-control input-sm" ng-model="selected[arrayObjectIndexOf(selected, result._id, 'id')].fps">
                                                <option disabled selected value></option>
                                                <option value="1">1</option>
                                                <option value="5">5</option>
                                                <option value="10">10</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-4" style="padding-left: 0%;">
                                        <div style="padding-top: 20%;">
                                            <label>Priority:</label>
                                        </div>
                                    </div>

                                    <div class="col-md-8" style="padding-left: 0%;">
                                        <div style="padding-top: 5%;">
                                            <select class="form-control input-sm" ng-model="selected[arrayObjectIndexOf(selected, result._id, 'id')].priority">
                                                <option disabled selected value></option>
                                                <option value="1">1&nbsp;&nbsp;&nbsp;-----------&nbsp;&nbsp;&nbsp;Low</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                                <option value="5">5&nbsp;&nbsp;&nbsp;-----------&nbsp;&nbsp;&nbsp;High</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row" >
                            <div class="col-md-5 col-md-offset-3" style="padding-top: 1%">
                                <button class="btn btn-default btn-block" type="button" ng-click="preview(result)">Preview</button>
                            </div>
                        </div>


                    </div>


                    <!--<div class="row" ng-show="arrayObjectIndexOf(selected, result._id, 'id') > -1">-->
                        <!--<div class="col-md-4 col-md-offset-4">-->
                            <!--<button class="btn btn-default btn-block" type="button" ng-click="preview(result)">Preview</button>-->
                        <!--</div>-->
                    <!--</div>-->
                </div>

            </div>
        </div>
    </div>

    <div style="text-align: center;">
        <dir-pagination-controls on-page-change="linkToTop()"></dir-pagination-controls>
    </div>

    <div class="row">
        <div class="col-md-5"></div>
        <div class="col-md-2">
            <div class="button_wrapper" style="padding-top: 7px;">
                <button class="btn btn-default btn-block" type="submit" ng-click="submit()">Submit</button>
            </div>
        </div>
        <div class="col-md-5"></div>
    </div>

</div>

<script type="text/ng-template" id="myModalContent.html">

    <div class="modal-body">
        <div class="center_video">
            <div class="embed-responsive embed-responsive-16by9">
                <video ng-src="{{previewSrc()}}" type="video/mp4" controls></video>
            </div>
        </div>
    </div>

</script>
