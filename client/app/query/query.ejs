

<div class="jumbotron text-center">
    <h1>Query</h1>
    <!--<p>Development Tool Kit.</p>-->
</div>




<div class="container" >


    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">

            <div class="form_container">
                <form role="form" ng-submit="sendPost()">

                    <div class="form-group">
                        <label for="location">Location:</label>
                        <input ng-model="location" type="text" class="form-control" id="location" placeholder="Location">
                    </div>


                    <div class="form-group">
                        <label for="weather">Weather:</label>
                        <select ng-model="weather" class="form-control" id="weather">
                            <option></option>
                            <option>Sunny</option>
                            <option>Rainy</option>
                            <option>Cloudy</option>
                            <option>Snow</option>
                        </select>
                    </div>


                    <div class="form-group">
                        <label for="theme">Theme:</label>
                        <select ng-model="theme" class="form-control" id="theme">
                            <option></option>
                            <option>Urban</option>
                            <option>Country</option>
                            <option>forest</option>
                            <option>Desert</option>
                        </select>
                    </div>


                    <div class="form-group">
                        <label for="object">Objects (hold shift to select more than one):</label>
                        <select ng-model="object" multiple class="form-control" id="object">
                            <option>Pedestrian</option>
                            <option>Vehicle</option>
                            <option>Zombie</option>
                            <option>Truck</option>
                            <option>Dog</option>
                        </select>
                    </div>


                    <div class="form-group">
                        <label for="annotated">Annotated:</label>
                        <div id="annotated">
                            <div class="radio-inline">
                                <label><input type="radio" name="annotated">Yes</label>
                            </div>
                            <div class="radio-inline">
                                <label><input type="radio" name="annotated">No</label>
                            </div>
                        </div>
                    </div>


                    <div class="form-group ">
                        <label for="from">From:</label>
                        <input class="form-control" id="from" placeholder="MM/DD/YYYY" type="text"/>
                    </div>

                    <div class="form-group ">
                        <label for="to">To:</label>
                        <input class="form-control" id="to" placeholder="MM/DD/YYYY" type="text"/>
                    </div>


                    <div class="form-group">
                        <div class="button_wrapper">
                            <button class="btn btn-primary " name="submit" type="submit">Submit</button>
                        </div>
                    </div>


                </form>
                <p>Result: <br/>
                   File Path: {{path}} <br/><br/>
                   Metadata: {{result}}</p>

            </div>
        </div>
        <div class="col-md-3"></div>
    </div>


</div>




